	<queryString>
		<![CDATA[SELECT TENMON, SUM(SOLUONG) SL
FROM BANGKE_MONAN JOIN MONAN ON BANGKE_MONAN.MAMON = MONAN.MAMON
WHERE EXTRACT(MONTH FROM NGAY) = $P{THANG} AND EXTRACT(YEAR FROM NGAY) = $P{NAM}
GROUP BY TENMON
ORDER BY SUM(SOLUONG)DESC
FETCH FIRST 3 ROW WITH TIES
]]>
